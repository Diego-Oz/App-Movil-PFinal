<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".MainCarrito">

    <androidx.cardview.widget.CardView
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:id="@+id/prinfoto"
                android:layout_marginTop="4dp"
                android:src="@drawable/comelona"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text=""
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                android:layout_below="@+id/prinnombre"
                android:layout_marginLeft="12dp"
                android:id="@+id/prindes"
                android:layout_toRightOf="@+id/prinfoto"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:id="@+id/prinnombre"
                android:textStyle="italic"
                android:textSize="26sp"
                android:layout_toRightOf="@+id/prinfoto"
                tools:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prindes"
                android:layout_toRightOf="@+id/prinfoto"
                android:id="@+id/prinprecio"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="4dp"
                tools:text=""
                android:drawableLeft="@drawable/ic_money"
                android:textColor="#FB342D"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>